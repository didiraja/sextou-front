/** GENERAL */
.content {
  .title {
    @apply mb-3;
  }

  .categories-wrapper {
    @apply flex flex-wrap gap-2;
  }
  
  .description {
    @apply mb-3;

    img {
      @apply w-full rounded-lg;
      box-shadow: var(--material-shadow-md-1), var(--material-shadow-md-2);
    }

    a {
      @apply underline hover:no-underline underline-offset-1;
    }
  }

  /** CARD MODE */
  &.card-mode {
    .cover {
      @apply w-full h-60 object-cover object-top mb-2;
    }

    .title {
      @apply text-3xl font-semibold;
    }

    .categories-wrapper {
      @apply mb-3;
    }
  }

  /** SINGLE MODE */
  &.single-mode {
    .date, .title {
      @apply text-center;
    }

    .title {
      @apply text-5xl font-bold tracking-tight;
    }

    .subheader {
      @apply mb-5 flex gap-2 justify-center items-center;

      .button {
        @apply w-fit;
      }
    }

    .cover {
      @apply max-w-full mx-auto mb-8;
    }

    .description {
      font-family: 'Rubik Variable', sans-serif;
      @apply text-xl font-normal;
    }
  }
}
