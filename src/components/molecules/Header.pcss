.header-wrapper {
  @apply /* fixed z-10 w-full */ backdrop-blur-sm drop-shadow-md bg-white/5 p-3;
}
.header-menu {
  @apply ml-auto;
  &--common {
    @apply text-white text-xl flex justify-end;
    li {
      &.hiddeable {
        @apply opacity-50 hidden lg:inline-block;
      }

      & ~ li {
        @apply ml-[1rem];
      }
    }
    .menu-item {
      @apply underline hover:no-underline underline-offset-1 cursor-pointer;
    }
  }
}
